{
  "name": "takara-ai-website",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/takara-ai/Website"
  },
  "author": "Takara AI",
  "license": "UNLICENSED",
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "start": "yarn run watch:tw & yarn run watch:hugo",
    "watch:tw": "tailwindcss -i ./env/assets/css/main.css -o ./env/assets/css/style.css --watch",
    "watch:hugo": "cd env && hugo server",
    "watch:parcel": "parcel watch ./env/assets/js/**/*.js --dist-dir ./env/static/js",
    "build": "yarn run build:hugo && yarn run build:parcel",
    "build:hugo": "cd env && hugo --minify",
    "build:parcel": "parcel build ./env/assets/js/**/*.js --dist-dir ./env/static/js",
    "test": "cd env && hugo"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "cssnano-preset-advanced": "^7.0.1",
    "pixi.js": "^8.1.5",
    "postcss": "^8.4.38",
    "postcss-preset-env": "^9.0.0",
    "tailwindcss": "^3.4.3",
    "terser": "^5.31.0"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.12.0",
    "parcel": "^2.12.0",
    "postcss-cli": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
